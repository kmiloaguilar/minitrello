@{
    PageData["title"] = "AngularJS SPA | Register";
}
<div class="row" style="background-color: gray">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <h2 class="text-center">Register</h2>
        <div class="form-box">
            <div class="form-group">
                <input ng-model="FirstName" type="text" class="form-control" placeholder="First Name" required autofocus />
            </div>
            <div class="form-group">
                <input ng-model="LastName" type="text" class="form-control" placeholder="Last Name" required autofocus />
            </div>
            <div class="form-group">
                <input ng-model="Email" type="email" class="form-control" placeholder="Email" required autofocus />
            </div>
            <div class="form-group">
                <input ng-model="Password" type="password" class="form-control" placeholder="Password" required />
            </div>
            <div class="form-group">
                <input ng-model="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required />
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" ng-click="register()">Sign In</button>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" ng-click="goToLogin()">Go To Login</button>
            </div>
        </div>
    </div>
</div>
@{
    PageData["title"] = "AngularJS SPA | Sign In";
}
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <h2 class="text-center">Sign In</h2>
        <div class="form-box">
            <div class="form-group">
                <input ng-model="Email" type="text" class="form-control" placeholder="Email" required autofocus />
            </div>
            <div class="form-group">
                <input ng-model="Password" type="password" class="form-control" placeholder="Password" required />
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" ng-click="login()">Sign In</button>
            </div>
        </div>
    </div>
</div>